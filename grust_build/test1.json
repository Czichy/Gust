{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "New BarChart",
    "width": 400,
    "height": 200,
    "padding": 5,
    "data": [
        {
            "name": "table1",
            "values": [
                {
                    "y": 0,
                    "x": "A"
                },
                {
                    "y": 1,
                    "x": "B"
                },
                {
                    "y": 4,
                    "x": "C"
                },
                {
                    "y": 9,
                    "x": "D"
                },
                {
                    "y": 16,
                    "x": "E"
                },
                {
                    "y": 25,
                    "x": "F"
                },
                {
                    "y": 36,
                    "x": "G"
                },
                {
                    "y": 49,
                    "x": "H"
                },
                {
                    "y": 64,
                    "x": "I"
                },
                {
                    "y": 81,
                    "x": "J"
                }
            ],
            "transform": []
        }
    ],
    "autosize": "pad",
    "signals": [],
    "scales": [
        {
            "name": "xscale",
            "type": "band",
            "domain": {
                "data": "table1",
                "field": "x"
            },
            "range": "width",
            "padding": 0.05,
            "round": true
        },
        {
            "name": "yscale",
            "domain": {
                "data": "table1",
                "field": "y"
            },
            "range": "height",
            "padding": 0.05,
            "round": true
        }
    ],
    "axes": [
        {
            "orient": "bottom",
            "scale": "xscale"
        },
        {
            "orient": "left",
            "scale": "yscale"
        }
    ],
    "marks": [
        {
            "type": "rect",
            "from": {
                "data": "table1"
            },
            "encode": {
                "enter": {
                    "x": {
                        "field": "x",
                        "scale": "xscale"
                    },
                    "width": {
                        "band": 1,
                        "scale": "xscale"
                    },
                    "y": {
                        "field": "y",
                        "scale": "yscale"
                    },
                    "y2": {
                        "value": 0,
                        "scale": "yscale"
                    }
                },
                "update": {
                    "fill": {
                        "value": "steelblue"
                    }
                },
                "hover": {
                    "fill": {
                        "value": "red"
                    }
                }
            }
        }
    ]
}